@keyframes flash
	from 
		opacity 0
	to
		opacity 1
#block1 
	.grid3
		display inline-block
		vertical-align middle
		width 55%
		img
			width 100%
		.clue
			background url('img/clue.jpg') 
			background-repeat no-repeat
			background-size 100% 100%
			min-height 40px
			padding 1em
			width 100%
		.clue:nth-child(2n)
			margin 1em 0
	.grid3:first-child
		background-repeat no-repeat
		background-position center
		background-size 7%
		width 20%
	.grid3:last-child
		background-repeat no-repeat
		background-position center
		background-size 7%
		width 20%
		.clue
			background url('img/cluer.png') 
			background-repeat no-repeat
			background-size 100% 100%			
#res
	div:first-child
		text-align center
		img
			cursor pointer
			width 20%
	margin 0 auto
	width 90%
	.opc
		display inline-block
		text-align center
		vertical-align top
		width 30%
	input
		text-align center
		width 30%
.flash
	animation flash .7s infinite
	-webkit-animation flash .7s infinite
footer #try
	position absolute
*
	clear both
